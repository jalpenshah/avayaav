{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
  },
  "include": ["src/**/*", "src/**/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/**/*.stories.tsx",
    "src/**/**/*.test.tsx",
  ]
}
